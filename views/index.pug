html
  head
    title= "Kenziegram"
    link(
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    )
  body(
      class="cyan lighten-4"
  )
    h1= 'Welcome to Kenziegram!'
        form(
            id="form"
            action="http://localhost:3000/uploads"
            method="POST"
            enctype="multipart/form-data"
        )
            div(
                class="file-field input-field"
            )
                div(
                    class="btn grey"
                )
                    span= 'Photo'
                    input(
                        id="image-input"
                        name="myImage"
                        type="file"
                    )
                div(
                    class="file-path-wrapper"
                )
                    input(
                        class="file-path validate"
                        type="text"
                    )

            button(
                type="submit"
                class="btn"
            )= "Submit"

    each photo in photos
        a(href=`http://localhost:3000/photos/${photo}`)
            img(
                src=`./uploads/${photo}`
                class="responsive-img"
                style="margin-bottom: 20px; border: 5px solid black;"
            )
